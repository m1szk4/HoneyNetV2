# HoneyNetV2 Environment Configuration
# Copy this file to .env and customize for your deployment
# IMPORTANT: Change all default passwords and secrets!

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Timezone (e.g., UTC, Europe/Warsaw, America/New_York)
TZ=UTC

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Honeypot DMZ Network (isolated, no outbound)
HONEYPOT_SUBNET=172.20.0.0/24
HONEYPOT_GATEWAY=172.20.0.1

# Management Network (for backend services)
MANAGEMENT_SUBNET=172.21.0.0/24
MANAGEMENT_GATEWAY=172.21.0.1

# =============================================================================
# CLICKHOUSE DATABASE
# =============================================================================

# Database name
CLICKHOUSE_DB=honeynet

# Database user (DO NOT use 'default' in production)
CLICKHOUSE_USER=honeynet

# Database password (CHANGE THIS!)
CLICKHOUSE_PASSWORD=changeme_secure_password_here

# ClickHouse connection details
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123

# =============================================================================
# DATA ANONYMIZATION
# =============================================================================

# Secret key for IP address anonymization (MUST BE CHANGED!)
# This salt is used to hash IP addresses for privacy
# Use a long random string: openssl rand -hex 32
ANON_SECRET_KEY=change_this_to_random_secret_minimum_32_characters_long

# =============================================================================
# GRAFANA
# =============================================================================

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Grafana base URL (adjust if behind reverse proxy)
GRAFANA_ROOT_URL=http://localhost:3000

# =============================================================================
# JUPYTER NOTEBOOK
# =============================================================================

# Jupyter access token (CHANGE THIS!)
JUPYTER_TOKEN=honeynet_token_change_me

# =============================================================================
# IDS/MONITORING RESOURCE LIMITS
# =============================================================================

# Suricata settings
SURICATA_THREADS=2
SURICATA_MEM_LIMIT=2g

# Zeek settings
ZEEK_THREADS=1.5
ZEEK_MEM_LIMIT=2g

# PCAP capture settings
PCAP_INTERFACE=eth0
PCAP_ROTATION_SECONDS=3600
PCAP_MAX_SIZE=1000
PCAP_SNAPLEN=65535
PCAP_BUFFER_SIZE=8192
PCAP_MEM_LIMIT=512m
PCAP_CPUS=0.5
PCAP_RETENTION_DAYS=60

# =============================================================================
# ALERTING & NOTIFICATIONS (Optional)
# =============================================================================

# Email for daily reports (if configured)
ALERT_EMAIL=admin@example.com

# SMTP settings for email alerts (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=honeynet@example.com

# Discord webhook URLs for security alerts (REQUIRED for alerting)
# Generate webhooks in Discord: Server Settings > Integrations > Webhooks
# Main webhook for general security alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Separate webhook for critical alerts (optional, uses main webhook if not set)
# Recommended to use different channel or add @here mentions
DISCORD_WEBHOOK_CRITICAL_URL=https://discord.com/api/webhooks/YOUR_CRITICAL_WEBHOOK_ID/YOUR_CRITICAL_WEBHOOK_TOKEN

# =============================================================================
# HONEYPOT SPECIFIC SETTINGS (Optional)
# =============================================================================

# Cowrie hostname to simulate
# COWRIE_HOSTNAME=ubuntu-server

# Dionaea bind address
# DIONAEA_LISTEN=0.0.0.0

# Conpot template (default, guardian_ast, iec104, etc.)
# CONPOT_TEMPLATE=default

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Docker Compose project name
COMPOSE_PROJECT_NAME=honeynet

# Enable debug logging (true/false)
# DEBUG=false

# Data retention period in days (for automatic cleanup)
DATA_RETENTION_DAYS=90

# =============================================================================
# BACKUP AND EXPORT SETTINGS
# =============================================================================

# Number of days of data to export in Parquet backups (default: 7)
# Can be overridden per backup: EXPORT_DAYS=30 ansible-playbook 99-backup.yml
EXPORT_DAYS=7

# Log retention for honeypot logs before archival (days)
LOG_RETENTION_DAYS=30
